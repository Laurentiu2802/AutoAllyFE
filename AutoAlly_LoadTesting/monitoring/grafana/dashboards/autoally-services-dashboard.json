{
  "dashboard": {
    "title": "AutoAlly Services Monitoring",
    "uid": "autoally-services",
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "title": "Service Status",
        "gridPos": { "x": 0, "y": 0, "w": 24, "h": 3 },
        "type": "stat",
        "targets": [
          {
            "expr": "up{application=\"autoally\"}",
            "legendFormat": "{{service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "value": 0, "text": "DOWN", "color": "red" },
              { "value": 1, "text": "UP", "color": "green" }
            ],
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "title": "CPU Usage (%)",
        "gridPos": { "x": 0, "y": 3, "w": 12, "h": 8 },
        "type": "graph",
        "targets": [
          {
            "expr": "process_cpu_usage{application=\"autoally\"} * 100",
            "legendFormat": "{{service}}"
          }
        ],
        "yaxes": [
          { "format": "percent", "min": 0, "max": 100 }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": { "params": [80], "type": "gt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "type": "avg" },
              "type": "query"
            }
          ]
        }
      },
      {
        "title": "Memory Usage (Heap)",
        "gridPos": { "x": 12, "y": 3, "w": 12, "h": 8 },
        "type": "graph",
        "targets": [
          {
            "expr": "(jvm_memory_used_bytes{application=\"autoally\",area=\"heap\"} / jvm_memory_max_bytes{application=\"autoally\",area=\"heap\"}) * 100",
            "legendFormat": "{{service}}"
          }
        ],
        "yaxes": [
          { "format": "percent", "min": 0, "max": 100 }
        ]
      },
      {
        "title": "HTTP Request Rate (req/s)",
        "gridPos": { "x": 0, "y": 11, "w": 12, "h": 8 },
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{application=\"autoally\"}[1m])",
            "legendFormat": "{{service}} - {{uri}}"
          }
        ]
      },
      {
        "title": "HTTP Response Times (p95)",
        "gridPos": { "x": 12, "y": 11, "w": 12, "h": 8 },
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{application=\"autoally\"}[5m]))",
            "legendFormat": "{{service}} - {{uri}}"
          }
        ],
        "yaxes": [
          { "format": "s" }
        ]
      },
      {
        "title": "HTTP Error Rate (%)",
        "gridPos": { "x": 0, "y": 19, "w": 12, "h": 8 },
        "type": "graph",
        "targets": [
          {
            "expr": "(rate(http_server_requests_seconds_count{application=\"autoally\",status=~\"5..\"}[5m]) / rate(http_server_requests_seconds_count{application=\"autoally\"}[5m])) * 100",
            "legendFormat": "{{service}}"
          }
        ],
        "yaxes": [
          { "format": "percent" }
        ]
      },
      {
        "title": "Database Connection Pool",
        "gridPos": { "x": 12, "y": 19, "w": 12, "h": 8 },
        "type": "graph",
        "targets": [
          {
            "expr": "hikaricp_connections_active{application=\"autoally\"}",
            "legendFormat": "{{service}} - Active"
          },
          {
            "expr": "hikaricp_connections_idle{application=\"autoally\"}",
            "legendFormat": "{{service}} - Idle"
          },
          {
            "expr": "hikaricp_connections_max{application=\"autoally\"}",
            "legendFormat": "{{service}} - Max"
          }
        ]
      },
      {
        "title": "JVM Threads",
        "gridPos": { "x": 0, "y": 27, "w": 8, "h": 6 },
        "type": "graph",
        "targets": [
          {
            "expr": "jvm_threads_live_threads{application=\"autoally\"}",
            "legendFormat": "{{service}} - Live"
          },
          {
            "expr": "jvm_threads_daemon_threads{application=\"autoally\"}",
            "legendFormat": "{{service}} - Daemon"
          }
        ]
      },
      {
        "title": "GC Pause Time",
        "gridPos": { "x": 8, "y": 27, "w": 8, "h": 6 },
        "type": "graph",
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_sum{application=\"autoally\"}[5m])",
            "legendFormat": "{{service}} - {{action}}"
          }
        ],
        "yaxes": [
          { "format": "s" }
        ]
      },
      {
        "title": "Active Alerts",
        "gridPos": { "x": 16, "y": 27, "w": 8, "h": 6 },
        "type": "table",
        "targets": [
          {
            "expr": "ALERTS{application=\"autoally\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "alertname": "Alert",
                "service": "Service",
                "severity": "Severity",
                "alertstate": "State"
              }
            }
          }
        ]
      }
    ]
  }
}